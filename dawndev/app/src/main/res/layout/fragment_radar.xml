<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ToneAnalyser.ToneAnalyzerGraph"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/graphCoverUpLayout"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/graphScrollView"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
          >
            <com.github.mikephil.charting.charts.RadarChart
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_marginTop="25dp"
                android:id="@+id/firstChart"/>
            <com.github.mikephil.charting.charts.RadarChart
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/firstChart"
                android:id="@+id/secondChart"/>
            <com.github.mikephil.charting.charts.RadarChart
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/secondChart"
                android:id="@+id/thirdChart"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

    <Button
        android:id="@+id/getResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Screenshot"/>


</RelativeLayout>
