<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.agile.dawndev.projectclvr.NewUserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:text="@string/add_company_message"
        android:id="@+id/welcome_message"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/add_company_info"
        android:id="@+id/welcome_info"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="33dp"
        android:textAlignment="center"
        android:layout_below="@+id/welcome_message"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:id="@+id/editText"
        android:textSize="33sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Company"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:textSize="33sp"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:ems="10"
        android:hint="Password"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/companyPassword"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_below="@id/companyPassword"
        android:id="@+id/linearLayout"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/gobutton2"
            android:elevation="3dp"
            android:onClick="assignCompany"
            android:id="@+id/done_button"
            android:layout_marginBottom="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/gobutton2"
            android:elevation="3dp"
            android:onClick="goBack"
            android:id="@+id/back_button"

            android:layout_marginBottom="50dp"
            android:layout_marginLeft="48dp"/>


    </LinearLayout>



</RelativeLayout>
